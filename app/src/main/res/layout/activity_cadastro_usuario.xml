<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroUsuarioActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/ic_cadastro" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/ic_user" />

        <EditText
            android:id="@+id/cadastro_usuario"
            android:layout_width="299dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:backgroundTint="#8d6b9f"
            android:hint="UsuÃ¡rio"
            android:inputType="textPersonName" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/ic_password" />

        <EditText
            android:id="@+id/cadastro_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:backgroundTint="#8d6b9f"
            android:hint="Senha"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="68dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/ic_password" />

        <EditText
            android:id="@+id/cadastro_confirma_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#8d6b9f"
            android:hint="Confirmar Senha"
            android:layout_weight="0.8"
            android:inputType="textPassword" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#FF6E7EA4"
        android:elevation="6dp"
        android:gravity="center"
        android:onClick="cadastre"
        android:textSize="17dp"
        android:layout_marginTop="15dp"
        android:text="Cadastrar"
        android:textColor="#fff" />

</LinearLayout>
